{
    "name": "wireui",
    "version": "1.0.0",
    "description": "Livewire ui components with tailwind base style",
    "repository": "git@github.com:PH7-Jack/wireui.git",
    "author": "PH7-Jack <pedrolivertwd@gmail.com>",
    "license": "MIT",
    "scripts": {
        "lint": "eslint . --ext .ts",
        "watch:css": "npx tailwindcss -i ./resources/css/wireui.css -o ./dist/css/wireui.css --watch",
        "watch:ts": "tsc --watch",
        "build:ts": "tsc",
        "build:css": "NODE_ENV=production npx tailwindcss -i ./resources/css/wireui.css -o ./dist/css/wireui.css --minify",
        "build": "yarn build:ts && yarn build:css",
        "test": "mocha -r ts-node/register -r jsdom-global/register ts-tests/**/*.spec.ts",
        "test-file": "mocha -r ts-node/register -r jsdom-global/register"
    },
    "dependencies": {
        "alpinejs": "^3.2.2",
        "dayjs": "^1.10.6",
        "lodash.kebabcase": "^4.1.1"
    },
    "devDependencies": {
        "@tailwindcss/forms": "^0.3.3",
        "@types/chai": "^4.2.21",
        "@types/mocha": "^9.0.0",
        "@typescript-eslint/eslint-plugin": "^4.28.3",
        "@typescript-eslint/parser": "^4.28.3",
        "autoprefixer": "^10.3.1",
        "chai": "^4.3.4",
        "cssnano": "^5.0.8",
        "eslint": "^7.31.0",
        "eslint-plugin-import": "^2.23.4",
        "jsdom": "^17.0.0",
        "jsdom-global": "^3.0.2",
        "mocha": "^9.0.2",
        "postcss": "^8.3.6",
        "postcss-100vh-fix": "^1.0.2",
        "postcss-cli": "^8.3.1",
        "postcss-import": "^14.0.2",
        "sass-loader": "^12.1.0",
        "tailwindcss": "^2.2.4",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.1.0",
        "typescript": "^4.3.5"
    }
}
